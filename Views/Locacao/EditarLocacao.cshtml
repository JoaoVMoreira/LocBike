@model LocacaoViewModel

@{
    ViewData["Title"] = "Editar Locação";
}

<div class="text-center">

    <div class="d-flex flex-row-reverse bd-highlight">
        <a type="button" class=" btn btn-primary btn-sm" asp-controller="Locacao" asp-action="Index">X</a>
    </div>
    <h1 class="d-flex p-2 bd-highlight">Atualizar Locação</h1>
    <br />

    <form asp-controller="Locacao" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="LocacaoModel.Id" />
        <div class="input-group mb-3">
            <label>Cliente</label>
            <select asp-for="LocacaoModel.NomeCliente" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
                @foreach (ClienteModel cliente in Model.clienteModels)
                {
                    <option>@cliente.Nome</option>
                }
            </select>
            @Html.ValidationMessageFor(x => x.LocacaoModel.NomeCliente);
        </div>

        <div class="input-group mb-3">
            <label>Data Locação</label>
            <input type="date" asp-for="LocacaoModel.DataLocacao" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            @Html.ValidationMessageFor(x => x.LocacaoModel.DataLocacao);
        </div>

        <div class="input-group mb-3">
            <label>Data Devolução</label>
            <input type="date" asp-for="LocacaoModel.DataDevolucao" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <label>Valor Diaria</label>
            <input type="text" asp-for="LocacaoModel.ValorDiaria" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            @Html.ValidationMessageFor(x => x.LocacaoModel.ValorDiaria);
        </div>

        <button type="submit" class="btn btn-primary btn-lg">CONFIRMAR</button>
    </form>
</div>