@model List<LocacaoModel>
@{
    ViewData["Title"] = "Locação";
}

<div class="text-center">
    <h1 class="display-4">Locação</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <thead>
                <tr>
                    <th scope="col">Cliente</th>
                    <th scope="col">Data Locação</th>
                    <th scope="col">Data Devolução</th>
                    <th scope="col">Valor Diaria</th>
                    <th scope="col">Valor Total</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            @if(Model != null && Model.Any())
            {
                foreach(LocacaoModel locacao in Model)
                {
                    <tr>
                        <td>@locacao.NomeCliente</td>
                        <td>@locacao.DataLocacao</td>
                        <td>@locacao.DataDevolucao</td>
                        <td>R$@locacao.ValorDiaria</td>
                        <td>R$@locacao.ValorTotal</td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-route-id="@locacao.Id" asp-area="" asp-controller="Locacao" asp-action="EditarLocacao">Editar</a>
                            <a type="button" class="btn btn-danger" asp-route-id="@locacao.Id" asp-area="" asp-controller="Locacao" asp-action="ExcluirLocacao">Excluir</a>
                        </td>
                    </tr>
                }
            }
            
        </tbody>
    </table>

    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Locacao" asp-action="AdicionarLocacao">+</a>

    <div class="pesquisa-area">
        <div class="input-group mb-3">
            <label>Buscar por nome</label>
            <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Botão</button>
            </div>
        </div>
        <div class="input-group mb-3">
            <label>Buscar por telefone</label>
            <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Botão</button>
            </div>
        </div>
        <button type="button" class="btn btn-primary"><a>Listar não devolvidos</a></button>
    </div>

    <div class="atualiza-modal">
        <h2>Locação - Modal</h2>
        <table class="table table-striped table-dark">
            <tbody>
                <tr>
                    <td>Joao Vittor</td>
                    <td>07/08/2023</td>
                    <td>27/08/2023</td>
                    <td>R$58,99</td>
                    <td>R$5,80</td>
                </tr>
            </tbody>
        </table>
    </div>


</div>

