@model LocacaoModel
@{
    ViewData["Title"] = "Adicionar Locação";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Locação</h1>
    <a type="button" class="btn btn-primary btn-lg" asp-controller="Locacao" asp-action="Index">X</a>
    
    <form asp-controller="Locacao" asp-action="Adicionar" method="post">
        <div class="input-group mb-3">
            <label>Cliente</label>
            <input type="text" asp-for="NomeCliente" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <label>Data Locação</label>
            <input type="datetime" asp-for="DataLocacao" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <label>Data Devolução</label>
            <input type="datetime" asp-for="DataDevolucao" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <label>Valor Diaria</label>
            <input type="text" asp-for="ValorDiaria" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <button type="submit" class="btn btn-primary btn-lg" >CONFIRMAR</button>
    </form>
</div>