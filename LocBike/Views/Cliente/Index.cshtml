@model List<ClienteModel>
@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    <h1 class="display-4">Clientes</h1>

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
    

    <table class="table table-striped table-dark" id="table-clientes">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Endereço</th>
                <th scope="col">Aniversário</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(ClienteModel cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.Endereco</td>
                        <td>@cliente.DataNascimento</td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-route-id="@cliente.Id" asp-area="" asp-controller="Cliente" asp-action="EditarCliente">Editar</a>
                            <a type="button" class="btn btn-danger" asp-route-id="@cliente.Id" asp-area="" asp-controller="Cliente" asp-action="ExcluirCliente">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Cliente" asp-action="AdicionarCliente">+</a>

</div>
