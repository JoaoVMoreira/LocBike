@model List<ClienteModel>
@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    <h1 class="display-4">Clientes</h1>

    <table class="table table-striped table-dark">
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(ClienteModel cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Telefone</td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-route-id="@cliente.Id" asp-area="" asp-controller="Cliente" asp-action="EditarCliente">Editar</a>
                            <a type="button" class="btn btn-danger" asp-route-id="@cliente.Id" asp-area="" asp-controller="Cliente" asp-action="ExcluirCliente">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Cliente" asp-action="AdicionarCliente">+</a>

    <div class="pesquisa-area">
        <div class="input-group mb-3">
            <label>Buscar por nome</label>
            <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Botão</button>
            </div>
        </div>
        <div class="input-group mb-3">
            <label>Buscar por telefone</label>
            <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Botão</button>
            </div>
        </div>
    </div>

    <div class="atualiza-modal">
        <h2>Cliente - Modal</h2>
        <table class="table table-striped table-dark">
            <tbody>
                <tr>
                    <td>Joao Vittor</td>
                    <td>Estrada do Embu</td>
                    <td>11 940028922</td>
                    <td>04/07/2002</td>
                </tr>
            </tbody>
        </table>
    </div>


</div>
