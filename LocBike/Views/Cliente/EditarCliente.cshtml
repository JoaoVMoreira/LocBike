@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">
    <h1 class="display-4">Nome Cliente</h1>
    <a type="button" class="btn btn-primary btn-lg" asp-controller="Cliente" asp-action="Index">X</a>

    <form asp-controller="Cliente" asp-action="Alterar" method="post">

        <input type="hidden" asp-for="Id"/>
        <div class="input-group mb-3">
            <label>Nome</label>
            <input type="text" asp-for="Nome" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <label>Telefone</label>
            <input type="text" asp-for="Telefone" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <label>Endereço</label>
            <input type="text" asp-for="Endereco" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <label>Data de Nascimento</label>
            <input type="text" asp-for="DataNascimento" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <button type="submit" class="btn btn-primary btn-lg">CONFIRMAR</button>
    </form>
</div>
