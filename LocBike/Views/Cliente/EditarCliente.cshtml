@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">

    <div class="d-flex flex-row-reverse bd-highlight">
        <a type="button" class=" btn btn-primary btn-sm" asp-controller="Locacao" asp-action="Index">X</a>
    </div>
    <h1 class="d-flex p-2 bd-highlight">Editar @Model.Nome</h1>
    <br />

    <form asp-controller="Cliente" asp-action="Alterar" method="post">

        <input type="hidden" asp-for="Id"/>
        <div class="input-group mb-3">
            <label>Nome</label>
            <input type="text" asp-for="Nome" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="input-group mb-3">
            <label>Telefone</label>
            <input type="text" asp-for="Telefone" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            @Html.ValidationMessageFor(x => x.Telefone)
        </div>

        <div class="input-group mb-3">
            <label>Endereço</label>
            <input type="text" asp-for="Endereco" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            @Html.ValidationMessageFor(x => x.Endereco)
        </div>

        <div class="input-group mb-3">
            <label>Data de Nascimento</label>
            <input type="date" asp-for="DataNascimento" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
            @Html.ValidationMessageFor(x => x.DataNascimento)
        </div>

        <button type="submit" class="btn btn-primary btn-lg">CONFIRMAR</button>
    </form>
</div>
